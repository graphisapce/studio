
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "The user's personal phone number."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture.",
          "format": "uri"
        },
        "role": {
          "type": "string",
          "description": "The user's role in the application.",
          "enum": [
            "customer",
            "business"
          ]
        },
        "shopName": {
          "type": "string",
          "description": "The name of the business shop."
        },
        "shopAddress": {
          "type": "string",
          "description": "The physical address of the shop."
        },
        "shopCategory": {
          "type": "string",
          "description": "The category of the business.",
          "enum": [
            "Food",
            "Groceries",
            "Retail",
            "Electronics",
            "Repairs",
            "Services",
            "Beauty",
            "Health",
            "Education",
            "Automobile",
            "Gifts",
            "Home Decor",
            "Clothing",
            "Jewelry",
            "Hardware",
            "Pharmacy",
            "Stationery",
            "Others"
          ]
        },
        "shopDescription": {
          "type": "string",
          "description": "A brief description of what the shop offers."
        },
        "shopContact": {
          "type": "string",
          "description": "Public contact number for the shop."
        },
        "shopImageUrls": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of Base64 strings for shop photos."
        },
        "createdAt": {
          "type": "string",
          "description": "The timestamp when the user account was created.",
          "format": "date-time"
        }
      },
      "required": [
        "uid",
        "email",
        "role",
        "createdAt"
      ]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product or service offered by a business.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "businessId": {
          "type": "string",
          "description": "The UID of the business owner."
        },
        "title": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "description": "Base64 image data."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "businessId",
        "title",
        "price"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "User profile documents, keyed by user ID."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/backend/entities/Product"
      },
      "description": "Product documents for businesses."
    }
  }
}
