
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user with structured address and delivery information.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "role": { "type": "string", "enum": ["customer", "business", "admin", "moderator", "delivery-boy"] },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "photoURL": { "type": "string" },
        "deliveryId": { "type": "string" },
        "areaCode": { "type": "string" },
        "houseNo": { "type": "string" },
        "street": { "type": "string" },
        "landmark": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string" },
        "pincode": { "type": "string" },
        "country": { "type": "string" }
      },
      "required": ["id", "name", "role"]
    },
    "Business": {
      "title": "Business",
      "type": "object",
      "description": "Represents a business profile.",
      "properties": {
        "id": { "type": "string" },
        "ownerId": { "type": "string" },
        "shopName": { "type": "string" },
        "category": { "type": "string" },
        "views": { "type": "number" },
        "callCount": { "type": "number" },
        "whatsappCount": { "type": "number" },
        "isPaid": { "type": "boolean" },
        "imageUrl": { "type": "string" },
        "logoUrl": { "type": "string" },
        "paymentQrUrl": { "type": "string" },
        "flashDeal": { "type": "string" },
        "openingTime": { "type": "string" },
        "closingTime": { "type": "string" },
        "performanceHistory": {
          "type": "object",
          "description": "Historical performance data keyed by month-year."
        }
      }
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "description": "Represents a delivery order.",
      "properties": {
        "id": { "type": "string" },
        "customerId": { "type": "string" },
        "customerName": { "type": "string" },
        "customerDeliveryId": { "type": "string" },
        "businessId": { "type": "string" },
        "shopName": { "type": "string" },
        "productId": { "type": "string" },
        "productTitle": { "type": "string" },
        "price": { "type": "number" },
        "deliveryBoyId": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "assigned", "picked-up", "out-for-delivery", "delivered", "cancelled"] },
        "address": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "Review": {
      "title": "Review",
      "type": "object",
      "description": "Customer reviews for a shop.",
      "properties": {
        "id": { "type": "string" },
        "businessId": { "type": "string" },
        "userName": { "type": "string" },
        "rating": { "type": "number" },
        "comment": { "type": "string" }
      }
    },
    "Announcement": {
      "title": "Announcement",
      "type": "object",
      "description": "Targeted announcements for specific areas or everyone.",
      "properties": {
        "id": { "type": "string" },
        "message": { "type": "string" },
        "targetType": { "type": "string", "enum": ["global", "area", "pincode"] },
        "targetValue": { "type": "string" },
        "isActive": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "User profiles."
    },
    "/businesses/{businessId}": {
      "schema": { "$ref": "#/backend/entities/Business" },
      "description": "Business profiles."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/backend/entities/Order" },
      "description": "Delivery orders."
    },
    "/reviews/{reviewId}": {
      "schema": { "$ref": "#/backend/entities/Review" },
      "description": "Store reviews."
    },
    "/announcements/{announcementId}": {
      "schema": { "$ref": "#/backend/entities/Announcement" },
      "description": "Targeted announcements."
    }
  }
}
