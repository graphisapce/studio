{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "role": { "type": "string", "enum": ["customer", "business", "admin"] },
        "email": { "type": "string", "format": "email" }
      },
      "required": ["id", "name", "role"]
    },
    "Business": {
      "title": "Business",
      "type": "object",
      "description": "Represents a business.",
      "properties": {
        "id": { "type": "string" },
        "ownerId": { "type": "string" },
        "shopName": { "type": "string" },
        "views": { "type": "number" },
        "isPaid": { "type": "boolean" }
      }
    },
    "Review": {
      "title": "Review",
      "type": "object",
      "description": "Customer reviews for a shop.",
      "properties": {
        "id": { "type": "string" },
        "businessId": { "type": "string" },
        "userName": { "type": "string" },
        "rating": { "type": "number" },
        "comment": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "User profiles."
    },
    "/businesses/{businessId}": {
      "schema": { "$ref": "#/backend/entities/Business" },
      "description": "Business profiles."
    },
    "/reviews/{reviewId}": {
      "schema": { "$ref": "#/backend/entities/Review" },
      "description": "Store reviews."
    }
  }
}
