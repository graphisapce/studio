
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }

    function isModerator() {
      return isSignedIn() && (getUserData().role == 'moderator' || getUserData().role == 'admin');
    }

    function isDeliveryBoy() {
      return isSignedIn() && getUserData().role == 'delivery-boy';
    }

    function isOwner(userId) {
      return isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    function ownsBusiness(businessId) {
      return isSignedIn() && (get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid || isModerator());
    }

    match /users/{userId} {
      allow get: if true;
      allow list: if isModerator();
      allow create: if isSignedIn();
      allow update: if isAdmin() || 
                      (isOwner(userId) && request.resource.data.role == resource.data.role) ||
                      (isModerator() && resource.data.role != 'admin' && userId != request.auth.uid);
      allow delete: if isAdmin();
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isSignedIn() && (request.resource.data.ownerId == request.auth.uid || isModerator());
      allow update: if (isOwner(resource.data.ownerId) || isModerator()) || 
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views', 'callCount', 'whatsappCount']));
      allow delete: if isOwner(resource.data.ownerId) || isModerator();
    }

    match /products/{productId} {
      allow get, list: if true;
      allow create: if ownsBusiness(request.resource.data.businessId) || isModerator();
      allow update, delete: if resource != null && (ownsBusiness(resource.data.businessId) || isModerator());
    }

    match /orders/{orderId} {
      allow get: if isSignedIn() && (
        request.auth.uid == resource.data.customerId || 
        request.auth.uid == resource.data.businessId || 
        isDeliveryBoy() || 
        isModerator()
      );
      // Allow listing if the user is a delivery boy, staff, OR the business/customer associated with orders
      allow list: if isSignedIn(); 
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        isDeliveryBoy() || 
        isModerator() || 
        (resource.data.customerId == request.auth.uid && request.resource.data.status == 'cancelled')
      );
      allow delete: if isModerator();
    }

    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow delete: if isModerator();
    }

    match /config/{configId} {
      allow get: if true;
      allow write: if isAdmin();
    }
  }
}
