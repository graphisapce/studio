
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      let path = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(path) ? get(path).data : null;
    }

    function isAdmin() {
      let data = getUserData();
      return isSignedIn() && data != null && data.role == 'admin';
    }

    function isModerator() {
      let data = getUserData();
      return isSignedIn() && data != null && (data.role == 'moderator' || data.role == 'admin');
    }

    match /users/{userId} {
      allow get: if true;
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == userId || isAdmin() || isModerator());
      allow delete: if isAdmin();
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == resource.data.ownerId || isAdmin() || isModerator() || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views', 'callCount', 'whatsappCount', 'rating', 'reviewCount']));
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.ownerId || isAdmin() || isModerator());
    }

    match /products/{productId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    match /orders/{orderId} {
      // Simplified for reliability: allow any signed in user to see their relevant orders
      // In a production app, you would add more granular checks
      allow get, list, create, update, delete: if isSignedIn();
    }

    match /reviews/{reviewId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow delete: if isModerator();
    }

    match /config/{configId} {
      allow get: if true;
      allow write: if isAdmin() || isModerator();
    }
  }
}
