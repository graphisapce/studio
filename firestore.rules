
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * LOCALVYAPAR SECURITY RULES
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    function ownsBusiness(businessId) {
      return isSignedIn() && get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId == request.auth.uid;
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    match /businesses/{businessId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      // Allow update if the user is the owner. 
      // Simplified to only check resource.data.ownerId to avoid issues with partial updates.
      allow update: if isExistingOwner(resource.data.ownerId);
      allow delete: if isExistingOwner(resource.data.ownerId);
    }

    match /products/{productId} {
      allow get, list: if true;
      allow create: if ownsBusiness(request.resource.data.businessId);
      allow update: if resource != null && ownsBusiness(resource.data.businessId);
      allow delete: if resource != null && ownsBusiness(resource.data.businessId);
    }
  }
}
